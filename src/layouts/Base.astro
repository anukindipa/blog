---
import "../styles/global.css";
import "@fontsource-variable/inter";

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Anuks Blog</title>
	</head>
	<body>
		<main class="content">
			<Header />
			<slot />
			<Footer />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	@import "./katex.css";
	@import "./colors.css": root {
		--color-bg: #19171a;
		--color-accent-dark: #201e21;
		--color-accent: #5c9ef5;
		--color-text: #aca4aa;
		--color-main: slateGrey;
	}

	html {
		background-color: var(--color-bg);
		font-family: "Inter Variable", sans-serif;
	}

	body {
		color: var(--color-text);
	}

	.content {
		width: 100%;
		max-width: 600px;
		margin: 0 auto;
		padding: 0 2rem;
	}
</style>
